<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <display-name>Secure JSP App</display-name>

  <!-- writeProcess.jsp 파일 업로드 처리 -->
  <servlet>
    <servlet-name>WriteProcess</servlet-name>
    <jsp-file>/write/writeProcess.jsp</jsp-file>
    <multipart-config>
      <location>/home/tomcat/uploads_tmp</location>
      <max-file-size>10485760</max-file-size> <!-- 10MB -->
      <max-request-size>20971520</max-request-size> <!-- 20MB -->
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>WriteProcess</servlet-name>
    <url-pattern>/write/writeProcess.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>jsp</servlet-name>
    <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
    <init-param>
        <param-name>fork</param-name>
        <param-value>false</param-value>
    </init-param>
    <multipart-config>
        <location>/tmp</location>
        <max-file-size>5242880</max-file-size>
        <max-request-size>20971520</max-request-size>
        <file-size-threshold>0</file-size-threshold>
    </multipart-config>
</servlet>

  <!-- SSI allowExec 비활성화 -->
  <servlet>
    <servlet-name>ssi</servlet-name>
    <servlet-class>org.apache.catalina.ssi.SSIServlet</servlet-class>
    <init-param>
      <param-name>buffered</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>allowExec</param-name>
      <param-value>false</param-value> <!-- 안전하게 설정 -->
    </init-param>
    <load-on-startup>4</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ssi</servlet-name>
    <url-pattern>*.shtml</url-pattern>
  </servlet-mapping>

</web-app>
